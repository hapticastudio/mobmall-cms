Listing Users

<table>
  <td>Email</td>
  <td>Admin</td>
  <td>Action</td>
  
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <% unless user == current_user %>
        <td>
          <% if user.admin? %>
            <%= button_to "Degrade", degrade_user_path(user), method: :patch %>
          <% else %>
            <%= button_to "Promote", promote_user_path(user), method: :patch %>
          <% end %>
        </td>
        <td><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to remove #{user.email} account?"} %></td>
      <% end %>
    </tr>
  <% end %>
</table>
