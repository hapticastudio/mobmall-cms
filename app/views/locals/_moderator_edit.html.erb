<p>
  <%= form_for local do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Name" %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area  :description, placeholder: "Description", class: "tinymce" %>
      <%= tinymce %>
    </p>
    <p>
      <%= f.label :tag_list, "Tags (separated by commas, max 3)" %>
      <%= f.text_field :tag_list %>
    </p>
    <%= f.submit nil, class: "button expand" %>
  <% end %>
</p>
